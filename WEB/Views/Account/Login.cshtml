@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section footer{
    <script>
        DCG.Login.Init();
    </script>    
}
<div class="row" id="Login" data-url-login="@Url.Action("Login","Account")">
    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
        <form>
            <div class="card" data-background="color" data-color="blue">
                <div class="card-header">
                    <h3 class="card-title">Login</h3>
                </div>
                <div class="card-content">
                    <div class="form-group">
                        <label>Ingrese usuario</label>
                        <input type="text" name="usurio" placeholder="Ingrese su usuario" class="form-control input-no-border">
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="password" name="clave" placeholder="Ingrese su password" class="form-control input-no-border">
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="button" name="btnIniciarSesion" class="btn btn-fill btn-wd ">Ingresar ahora</button>
                </div>
            </div>
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>

 