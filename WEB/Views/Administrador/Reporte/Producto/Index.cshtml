@{
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@{
    ViewBag.Title = "Reporte | Producto";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}
@section footer{
    <script>
        DCG.rpt_producto.Init();
    </script>
}
<div class="row" id="rpt_producto" >
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-left">
                            <h4 class="card-title">Reporte de producto</h4>
                            <p class="category">Lista de todos los productos</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover table-green dataTable table-condensed" id="tb_rpt_producto">
                        <thead>
                            <tr>
                                <th class="model"><a class="onload" href="@Url.Action("listar", "Modelo")" root=" data" data-params="nombre:,rol:"></a></th>
                                <th>Modelo</th>
                                <th>Categoría</th>
                                <th>Linea</th>
                                <th>Marca</th>
                                <th>Imagen</th>
                                <th>Stock</th>
                                <th>Series</th>
                            </tr>
                        </thead>
                        <tfoot></tfoot>
                        <tbody>
                            <tr class="model">
                                <td class="modelo" />
                                <td class="categoria" />
                                <td class="linea" />
                                <td class="marca" />
                                <td class="img" />
                                <td class="sctock" />
                                <td class="series" style="display:none">
                                    <a class="series"><i class="ti-list-ol"></i> </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" id="dlgBarcodes" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Lista de series</h4>
                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover table-green dataTable table-condensed" id="tb_rpt_series">
                            <thead>
                                <tr>
                                    <th class="model"><a class="onload" href="@Url.Action("listar", "Producto")" root="data" data-params="nombre:,rol:"></a></th>
                                    <th>Serie</th>
                                    <th>Estado</th>
                                    <th>Observación</th>
                                </tr>
                            </thead>
                            <tfoot></tfoot>
                            <tbody>
                                <tr class="model">
                                    <td class="barcode" />
                                    <td class="estado" />
                                    <td class="barcode_desc" />
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" name="btnCancelar" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>


</div>




