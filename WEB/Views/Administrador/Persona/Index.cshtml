@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Persona";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}
@section footer{
    <script>
        SYSTEMA.Persona.Init();
    </script>
}
<div class="row" id="Persona" data-url-register="@Url.Action("Registrar", "Persona")" data-url-delete="@Url.Action("Delete", "Persona")">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-left">
                            <h4 class="card-title">Persona</h4>
                            <p class="category">Lista de todas las personas con su rol.</p>
                        </div>
                        <div class="pull-right">
                            <button class="btn btn-primary" name="btnNuevaPersona">Agregar nuevo</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover table-green dataTable table-condensed" id="tbPersona">
                        <thead>
                            <tr>
                                <th class="model"><a class="onload" href="@Url.Action("listar", "Persona")" root="data" data-params="nombre:,rol:"></a></th>
                                <th></th>
                                <th>ROL</th>
                                <th>NOMBRE</th>
                                <th>APELLIDO P</th>
                                <th>APELLIDO M</th>
                                <th>CORREO</th>
                                <th>DIRECCION</th>
                                <th>DIRECCION FISCAL</th>
                                <th>RAZON SOCIAL</th>
                                <th>RUC</th>
                                <th>DNI</th>
                                <th>F NACIMIENTO</th>
                                <th>CONTRASEÑA</th>
                                <th>TELEFONO</th>
                                <th>IMG</th>

                            </tr>
                        </thead>
                        <tfoot></tfoot>
                        <tbody>
                            <tr class="model">
                                <td style="width: 100px; text-align:center">
                                    <a class="select">
                                        <i class="ti-pencil"></i>
                                    </a>
                                    &nbsp;&nbsp;
                                    <a class="delete">
                                        <i class="ti-trash"></i>
                                    </a>
                                </td>
                                <td class="rol" />
                                <td class="nombre" />
                                <td class="paterno" />
                                <td class="materno" />
                                <td class="email" />
                                <td class="direccion" />
                                <td class="fiscal" />
                                <td class="razon" />
                                <td class="ruc" />
                                <td class="dni" />

                                <td class="fechanac" />
                                <td class="password" />
                                <td class="telefono" />
                                <td class="img" />

                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>



    <div class="modal fade" id="dlgPersona" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Agregar/Actaulizar Persona</h4>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">

                    <form id="frmPersona">
                        <div class="portlet-body padding1">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Rol</label>
                                        <select name="rol" class="form-control">
                                            @foreach (var item in Model)
                                            {
                                                <option value="@item.Name">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Nombre</label>
                                        <input type="text" placeholder="Nombre" name="nombre" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Apellido Paterno</label>
                                        <input type="text" placeholder="Ap. Paterno" name="paterno" class="form-control" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Apellido Materno</label>
                                        <input type="text" placeholder="Ap. Materno" name="materno" class="form-control" required>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label>Direccion</label>
                                        <input type="text" placeholder="direccion" name="direccion" class="form-control" required>
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Telefono</label>
                                        <input type="text" placeholder="Telefono" name="telefono" class="form-control" required>
                                    </div>

                                    <div class="col-sm-6">
                                        <label>Email</label>
                                        <input type="text" placeholder="ejemplo@domino.com" name="email" class="form-control" required>

                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Fecha de Nacimiento</label>
                                        <input type="text" placeholder="Fecha nacimiento" name="fechanac" class="form-control" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Usuario</label>
                                        <input class="form-control" type="text" name="usuario" required placeholder="Digite usuario" />
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label>Foto</label>
                                        <input type="file" name="img_tmp" class="form-control" />
                                        <input type="hidden" name="img" value="" />
                                    </div>

                                </div>
                            </div>




                            <div class="detallePersona" style="display:none">
                                <hr />
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <label>RUC</label>
                                            <input type="text" placeholder="Ruc" name="ruc" class="form-control" required>
                                        </div>

                                        <div class="col-sm-6">
                                            <label>DNI</label>
                                            <input type="text" placeholder="Dni" name="dni" class="form-control" required>
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <label>Razón social</label>
                                            <input class="form-control" type="text" name="razon" required placeholder="Digite usuario" />
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <label>Dirección fiscal</label>
                                            <input class="form-control" type="text" name="fiscal" required placeholder="Digite usuario" />
                                        </div>

                                    </div>
                                </div>
                            </div>



                            <input type="hidden" name="id" value="0" />
                        </div>
                    </form>

                </div>
                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" name="btnRegistrar">Registrar</button>
                </div>
            </div>
        </div>
    </div>


</div>



