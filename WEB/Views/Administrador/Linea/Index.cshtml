@{
    ViewBag.Title = "Linea";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}
@section footer{
    <script>
        DCG.Linea.Init();
    </script>
}
<div class="row" id="Linea" data-url-register="@Url.Action("Registrar", "Linea")" data-url-delete="@Url.Action("Delete", "Linea")">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-left">
                            <h4 class="card-title">Marca</h4>
                            <p class="category">Lista de todas las marcas registradas</p>
                        </div>
                        <div class="pull-right">
                            <button class="btn btn-primary" name="btnNuevo">Agregar nuevo</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover table-green dataTable table-condensed" id="tbLinea">
                        <thead>
                            <tr>
                                <th class="model"><a class="onload" href="@Url.Action("listar", "Linea")" root="data" data-params="nombre:,rol:"></a></th>
                                <th></th>
                                <th>Linea</th>
                                <th>Fecha de registro</th>
                            </tr>
                        </thead>
                        <tfoot></tfoot>
                        <tbody>
                            <tr class="model">
                                <td style="width: 100px; text-align:center">
                                    <a class="select">
                                        <i class="ti-pencil"></i>
                                    </a>
                                    &nbsp;&nbsp;
                                    <a class="delete">
                                        <i class="ti-trash"></i>
                                    </a>
                                </td>
                                <td class="linea" />
                                <td class="fecha" />
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>



    <div class="modal fade" id="dlgLinea" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Agregar/Actaulizar linea</h4>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">

                    <form class="form-horizontal">
                        <div class="form-group">
                            <label>Ingrese linea</label>
                            <div class="col-md-12">
                                <input type="text" name="linea" value="" class="form-control" required />
                            </div>
                        </div>
                        <input type="hidden" name="id" value="0" />
                    </form>
                </div>
                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" name="btnRegistrar">Registrar</button>
                </div>
            </div>
        </div>
    </div>


</div>



